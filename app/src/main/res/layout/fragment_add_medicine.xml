<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:layout_marginTop="0dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        tools:context=".ui.addMedicine.view.AddMedicineFragment">

        <Button
            android:id="@+id/eveningBtn"
            android:layout_width="172dp"
            android:layout_height="40dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="8dp"
            android:text="@string/evening"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/morningBtn"
            app:layout_constraintTop_toBottomOf="@+id/morningBtn"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/nightBtn"
            android:layout_width="172dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="@string/night"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/afternoonBtn"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/eveningBtn"
            app:layout_constraintTop_toBottomOf="@+id/afternoonBtn"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/afternoonBtn"
            android:layout_width="172dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:text="@string/afternoon"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintStart_toEndOf="@+id/morningBtn"
            app:layout_constraintTop_toTopOf="@+id/morningBtn" />

        <Button
            android:id="@+id/morningBtn"
            android:layout_width="172dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/morning"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextTextPersonName2"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/strength"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/strength"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/txtAddMedicine"
            android:layout_width="229dp"
            android:layout_height="37dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="12dp"
            android:text="@string/addMedicine"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/editTextTextPersonName"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/medicineName"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAddMedicine">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/medName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="129dp"
            android:layout_height="26dp"
            android:layout_marginTop="20dp"
            android:text="@string/type"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName2"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="138dp"
            android:layout_height="22dp"
            android:layout_marginTop="40dp"
            android:text="@string/startDate"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/pillBtn" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="151dp"
            android:layout_height="23dp"
            android:text="@string/duration"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName2" />

        <EditText
            android:id="@+id/edtDuration"
            android:layout_width="151dp"
            android:layout_height="43dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="date"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="154dp"
            android:layout_height="22dp"
            android:layout_marginTop="48dp"
            android:text="@string/amount"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/startDateTxt"
            app:layout_constraintTop_toBottomOf="@+id/startDateTxt" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="155dp"
            android:layout_height="26dp"
            android:text="@string/frequence"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@+id/edtDuration"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/refillSwitch"
            android:layout_width="63dp"
            android:layout_height="24dp"
            android:layout_marginStart="176dp"
            android:background="@color/background"
            android:backgroundTint="@color/secondary"
            app:layout_constraintStart_toEndOf="@+id/textView15"
            app:layout_constraintTop_toTopOf="@+id/textView15"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="204dp"
            android:layout_height="55dp"
            android:layout_marginTop="12dp"
            android:background="#FFFFFF"
            android:text="@string/save"
            android:textSize="18sp"

            app:layout_constraintEnd_toEndOf="@+id/nightBtn"
            app:layout_constraintHorizontal_bias="0.537"
            app:layout_constraintStart_toStartOf="@+id/morningBtn"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="167dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="48dp"
            android:text="@string/timeToTake"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/txtAmount" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="127dp"
            android:layout_height="25dp"
            android:layout_marginTop="24dp"
            android:text="@string/refillReminder"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="80dp"
            android:layout_height="26dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="24dp"
            android:text="@string/time"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/eveningBtn"
            app:layout_constraintTop_toBottomOf="@+id/eveningBtn" />

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="80dp"
            android:layout_height="26dp"
            android:layout_marginStart="24dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="@+id/textView8"
            tools:text="@string/home" />

        <ImageButton
            android:id="@+id/doneBtn"
            android:layout_width="43dp"
            android:layout_height="39dp"
            android:layout_marginEnd="16dp"
            android:background="#00FFFFFF"
            android:backgroundTint="@color/other"
            android:src="@drawable/done_black_24dp"
            app:layout_constraintEnd_toStartOf="@+id/txtAddMedicine"
            app:layout_constraintTop_toTopOf="@+id/txtAddMedicine" />

        <ImageButton
            android:id="@+id/cancelBtn"
            android:layout_width="43dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:background="#00FFFFFF"
            android:src="@drawable/close_black_24dp"
            app:layout_constraintStart_toEndOf="@+id/txtAddMedicine"
            app:layout_constraintTop_toTopOf="@+id/txtAddMedicine" />

        <TextView
            android:id="@+id/startDateTxt"
            android:layout_width="90dp"
            android:layout_height="42dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageButton
            android:id="@+id/celenderBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="#00FFFFFF"
            android:src="@drawable/ic_calender"
            app:layout_constraintStart_toEndOf="@+id/startDateTxt"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <ImageButton
            android:id="@+id/pillBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="14dp"
            android:background="#00FFFFFF"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:srcCompat="@drawable/ic_pill" />

        <ImageButton
            android:id="@+id/bottleBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:background="#00FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/pillBtn"
            app:layout_constraintTop_toTopOf="@+id/pillBtn"
            app:srcCompat="@drawable/ic_bottle_pill" />

        <ImageButton
            android:id="@+id/dropBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:background="#00FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/bottleBtn"
            app:layout_constraintTop_toTopOf="@+id/bottleBtn"
            app:srcCompat="@drawable/ic_medicine" />

        <ImageButton
            android:id="@+id/injectionBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:background="#00FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/dropBtn"
            app:layout_constraintTop_toTopOf="@+id/dropBtn"
            app:srcCompat="@drawable/ic_injection__1_" />

        <ImageButton
            android:id="@+id/timeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:background="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="@+id/nightBtn"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/txtTime"
            app:layout_constraintTop_toTopOf="@+id/txtTime"
            app:srcCompat="@drawable/ic_alarm" />

        <ImageButton
            android:id="@+id/amountAddBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/secondary"
            app:layout_constraintEnd_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:srcCompat="@drawable/ic_add_white_36dp" />

        <ImageButton
            android:id="@+id/amountMinusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="24dp"
            android:background="@color/secondary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:srcCompat="@drawable/ic_remove_white_36dp" />

        <TextView
            android:id="@+id/txtAmount"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="24dp"
            android:text="@string/num"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toStartOf="@+id/amountAddBtn"
            app:layout_constraintStart_toEndOf="@+id/amountMinusBtn"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <ImageButton
            android:id="@+id/frequenceMinusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/secondary"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:srcCompat="@drawable/ic_remove_white_36dp" />

        <ImageButton
            android:id="@+id/frequenceAddBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@color/secondary"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7"
            app:srcCompat="@drawable/ic_add_white_36dp" />

        <TextView
            android:id="@+id/txtFrequence"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="24dp"
            android:text="@string/num"
            android:textAlignment="center"
            android:textSize="34sp"
            app:layout_constraintEnd_toStartOf="@+id/frequenceAddBtn"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/frequenceMinusBtn"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <View
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#605C5C"
            android:backgroundTint="#ACA7A7"
            app:layout_constraintBottom_toTopOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dropBtn" />

        <View
            android:id="@+id/view2"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#ACA7A7"
            android:backgroundTint="#ACA7A7"
            app:layout_constraintBottom_toTopOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/celenderBtn"
            app:layout_constraintVertical_bias="0.596" />

        <View
            android:id="@+id/view3"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#ACA7A7"
            android:backgroundTint="#ACA7A7"
            app:layout_constraintBottom_toTopOf="@+id/textView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/amountAddBtn"
            app:layout_constraintVertical_bias="0.652" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

