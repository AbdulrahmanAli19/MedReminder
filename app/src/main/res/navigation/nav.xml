<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.itijavaproject.ui.homescreen.view.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home">
       <action
            android:id="@+id/action_homeFragment_to_medicationsFragment"
            app:destination="@id/medicationsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/medicationsFragment"
        android:name="com.example.itijavaproject.ui.medicationsscreen.view.MedicationsFragment"
        android:label="MedicationsFragment"
        tools:layout="@layout/fragment_medications" >
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/medicationDisplayFragment"
        android:name="com.example.itijavaproject.ui.medicationDisplay.MedicationDisplayFragment"
        android:label="fragment_medication_display"
        tools:layout="@layout/fragment_medication_display" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.example.itijavaproject.ui.splashscreen.view.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_authFragment"
            app:destination="@id/authFragment" />
    </fragment>
    <fragment
        android:id="@+id/authFragment"
        android:name="com.example.itijavaproject.ui.authscreen.view.AuthFragment"
        android:label="fragment_auth"
        tools:layout="@layout/fragment_auth" >
        <action
            android:id="@+id/action_authFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>